@model  Online.DbHelper.Model.TVClassSchedule
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Edit.cshtml";
}
<div class="modal-content" style="width: 700px">
    @using (Html.BeginForm("TvClassScheduleCreateSave", "SysSetting", FormMethod.Post))
    {
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">课程表编辑</h4>
        </div>
        <div class="modal-body">
            @Html.AntiForgeryToken()
 
            <div class="form-horizontal">
                <div class="form-group form-group-sm">
                    <label class="col-md-2 control-label">直播室：</label>
                    <div class="col-md-8">
                        @Html.DropDownList("LiveRoomId", null, new { @class = "form-control input-sm col-md-2" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-2 control-label">老师：</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(item => item.Teacher, new { @class = "form-control input-sm col-md-2" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-2 control-label">课程：</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(item => item.TNickName, new { @class = "form-control input-sm col-md-2" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-2 control-label">直播时间：</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(item => item.liveStartTime, new {@style="width: 100px;", @class = "form-control" })
                        ~
                        @Html.TextBoxFor(item => item.liveEndTime, new { @style = "width: 100px;", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-2 control-label">有效时间：</label>
                    <div class="col-md-8">
                        <input type="date" name="EffectiveStartTime" value="@string.Format("{0:yyyy-MM-dd}",Model.EffectiveStartTime)" style="width: 200px; display: inline" />
                        &nbsp;至&nbsp;
                        <input type="date" name="EffectiveEndTime" value="@string.Format("{0:yyyy-MM-dd}",Model.EffectiveEndTime)" style="width: 200px; display: inline" />
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
            <input type="submit" class="btn btn-primary" value="保存" />
        </div>
    }
</div>
