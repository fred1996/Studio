@model Online.DbHelper.Model.SysDictionaries
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Edit.cshtml";
}
<div class="modal-content">
    @using (Html.BeginForm("SysDictionarieEditSave", "SysSetting", FormMethod.Post))
    {
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">系统字典添加</h4>
        </div>
        <div class="modal-body">

            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.HiddenFor(model => model.SysDictID)
                <div class="form-group form-group-sm">
                    <label class="col-md-4 control-label">key值：</label>
                    <div class="col-md-8">
                        @Html.EditorFor(t => t.FiledName, new {htmlAttributes = new {@class = "form-control"}})
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-4 control-label">value值：</label>
                    <div class="col-md-8">
                        @Html.EditorFor(t => t.FiledValue, new {htmlAttributes = new {@class = "form-control"}})
                    </div>
                </div>

                <div class="form-group form-group-sm">
                    <label class="col-md-4 control-label">描述：</label>
                    <div class="col-md-8">
                        @Html.TextAreaFor(t => t.Description, new {@class = "form-control"})
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
            <button class="btn btn-primary" id="editSave">保存</button>
        </div>
    }
</div>

