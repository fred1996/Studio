
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Edit.cshtml";
}
<div class="modal-content">
    @using (Html.BeginForm("CreateSave", "SystemInfo", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">房间消息编辑</h4>
        </div>
        <div class="modal-body">
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div class="form-group form-group-sm">
                    <label class="col-md-4 control-label">所属房间：</label>
                    <div class="col-md-8">
                        @Html.DropDownList("RoomID", ViewBag.roomList as IEnumerable<SelectListItem>, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-4 control-label">消息标题：</label>
                    <div class="col-md-8">
                        @Html.TextBox("InfoTitle", "",new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group form-group-sm">
                    <label class="col-md-4 control-label">栏目类型：</label>
                    <div class="col-md-8">
                        @Html.DropDownList("InfoType", ViewBag.columns as IEnumerable<SelectListItem>, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-4 control-label">栏目内容：</label>
                    <div class="col-md-8">
                        @Html.TextArea("InfoContent", "", new { @class = "form-control", style = "height:100px" })
                    </div>
                </div>
                @*<div class="form-group form-group-sm">
                        <label class="col-md-4 control-label">栏目图片地址：</label>
                        <div class="col-md-8">
                            @Html.TextBox("ImgUrl", new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                    </div>*@
                <div class="form-group form-group-sm">
                    <label class="col-md-4 control-label">选择图片：</label>
                    <div class="col-md-8">
                        <input type="file" class="form-control file" name="image" />
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-4 control-label">源链接：</label>
                    <div class="col-md-8">
                        @Html.TextBox("SourceLink", "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-4 control-label">权重：</label>
                    <div class="col-md-8">
                        @Html.TextBox("InfoWeight", "", new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
            <button class="btn btn-primary" id="editSave">保存</button>
        </div>
    }
</div>
