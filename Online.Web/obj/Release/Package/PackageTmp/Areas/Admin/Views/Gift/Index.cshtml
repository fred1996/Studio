
@{
    ViewBag.Title = "礼物列表";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
@model IEnumerable<Online.DbHelper.Model.UserCenter.Gift>
<h2>礼物列表</h2>
<a role="button" href="/Admin/Gift/GiftCreate" class="btn btn-primary" style="float: right; margin-bottom: 9px;" data-toggle="modal" data-target="#myModal">
    <i class="glyphicon glyphicon glyphicon-plus"></i>&nbsp;新建
</a>
<div style="clear: both"></div>
<div class="info">
    <table class="table table-bordered table-hover" id="thetable">
        <thead>
            <tr>
                <th style="width: 30px;">UID</th>
                <th>礼物名称</th>
                <th>礼物类型</th>
                <th>礼物单位</th>
                <th>最大数量</th>
                <th>创建时间</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.GiftId</td>
                    <td>@item.GiftName</td>
                    <td>@item.GiftType</td>
                    <td>@item.GiftUnit</td>
                    <td>@item.GiftCount</td>
                    <td>@item.CreateTime</td>
                    <td>
                        <a class="btn  btn-info" data-toggle="modal" data-target="#myModal" href="/Admin/Gift/GiftEdit?giftId=@item.GiftId" id="Edit" role="button">
                            <i class="glyphicon glyphicon-pencil"></i>&nbsp;编辑
                        </a>
                        <a class="btn btn-danger" role="button" href="/Admin/Gift/GiftDel?giftId=@item.GiftId">
                            <i class="glyphicon glyphicon-trash"></i>&nbsp;删除
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @*<div>
            @Html.Partial("PageBar", ViewBag.PageInfo as PageInfoModel)
        </div>*@
</div>
<div class="modal  fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">

</div>
<script>
    $(function () {
        ShowMenu("SysSetting");
        Active('SysSetting', 5);
        $("#myModal").on("hidden.bs.modal", function () {
            $(this).removeData("bs.modal");
        });
    })
</script>