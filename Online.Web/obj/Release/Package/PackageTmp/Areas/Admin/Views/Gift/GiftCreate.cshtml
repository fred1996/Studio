
@{
    ViewBag.Title = "GiftCreate";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Edit.cshtml";
}
<div class="modal-content">
    @using (Html.BeginForm("CreateSave", "Gift", FormMethod.Post))
    {
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">礼物新增</h4>
        </div>
        <div class="modal-body">

            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="form-group form-group-sm">
                    <label class="col-sm-4 control-label">名称：</label>
                    <div class="col-md-8">
                        @Html.TextBox("GiftName", "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-4 control-label">礼物类型：</label>
                    <div class="col-md-8">
                        @Html.TextBox("GiftType", "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-4 control-label">礼物单位：</label>
                    <div class="col-md-8">
                        @Html.TextBox("GiftUnit", "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-4 control-label">最大数量：</label>
                    <div class="col-md-8">
                        @Html.TextBox("GiftCount", "", new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
            <button class="btn btn-primary" id="editSave">保存</button>
        </div>
    }
</div>
