@{
    ViewBag.Title = "添加用户字典";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Edit.cshtml";
}

<div class="modal-content">
    @using (Html.BeginForm("AddUserKeySave", "User", FormMethod.Post))
    {
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">新增用户字典</h4>
        </div>
        <div class="modal-body">
            @Html.AntiForgeryToken()
            <div class="form-horizontal" style="margin-left:0px;">
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Key值：</label>
                    <div class="col-md-8">
                        @Html.TextBox("FiledBaseName","",  new{@class="form-control"})
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Value值：</label>
                    <div class="col-md-8">
                        @Html.TextBox("FiledBaseValue", "", new {@class ="form-control"})
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">描述：</label>
                    <div class="col-md-8">
                        @Html.TextArea("Description", "", new {@class="form-control"})
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
            <button class="btn btn-primary" id="editSave">保存</button>
        </div>
                            }
</div>