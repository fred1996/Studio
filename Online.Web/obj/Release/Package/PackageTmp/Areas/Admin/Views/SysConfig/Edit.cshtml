@using Online.DbHelper.Model
@model Online.DbHelper.Model.SysConfigs
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Edit.cshtml";
}
<div class="modal-content" style="width: 800px!important;">
    @using (Html.BeginForm("EditSave", "SysConfig", FormMethod.Post))
    {
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">房间配置编辑</h4>
        </div>
        <div class="modal-body">

            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.HiddenFor(model => model.SysConfigID)
                <div class="form-group form-group-sm">
                    <div class="col-md-6">
                        <label class="col-md-6 control-label">直播室：</label>
                        <div class="col-md-6">
                            @Html.DropDownListFor(t => t.RoomId, ViewBag.roomList as IEnumerable<SelectListItem>, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="col-md-6 control-label">是否禁言：</label>
                        <div class="col-md-6">
                            @Html.EditorFor(t=>t.IsAllowPost, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="form-group form-group-sm">
                    <div class="col-md-6">
                        <label class="col-md-6 control-label">是否开启消息过滤：</label>
                        <div class="col-md-6">
                            @Html.EditorFor(t => t.IsFilterMsg, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="col-md-6 control-label">是否开启消息审核：</label>
                        <div class="col-md-6">
                            @Html.EditorFor(t => t.IsCheckMsg, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <div class="col-md-6">
                        <label class="col-md-6 control-label">是否允许上次附件：</label>
                        <div class="col-md-6">
                            @Html.EditorFor(t => t.IsUploadFile, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="col-md-6 control-label">是否允许游客发言：</label>
                        <div class="col-md-6">
                            @Html.EditorFor(t => t.IsAllowTouristPost, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <div class="col-md-12">
                        <label class="col-md-2 control-label">客服QQ：</label>
                        <div class="col-md-10">
                            @Html.TextAreaFor(t=>t.ServiceQQs, new {  @class = "form-control"})
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
            <button class="btn btn-primary" id="editSave">保存</button>
        </div>
    }
</div>
