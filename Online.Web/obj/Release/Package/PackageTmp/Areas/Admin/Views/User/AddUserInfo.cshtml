@{
    ViewBag.Title = "AddUserInfo";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Edit.cshtml";
}
<div class="modal-content">
    @using (Html.BeginForm("SaveAddUserInfo", "User", FormMethod.Post, new { @id = "from2" }))
    {
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">添加用户信息</h4>
        </div>
        <div class="modal-body">
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div class="form-group form-group-sm">
                    <label class="col-sm-4 control-label">用户名：</label>
                    <div class="col-md-8">
                        @Html.TextBox("UserName", "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-4 control-label">密码：</label>
                    <div class="col-md-8">
                        @Html.Password("Password", "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-4 control-label">邮箱：</label>
                    <div class="col-md-8">
                        @Html.TextBox("Email", "", new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
            <input type="button" class="btn btn-primary" id="editSave" onclick="SaveAddUinfo()" value="保存" />
        </div>
    }
</div>
