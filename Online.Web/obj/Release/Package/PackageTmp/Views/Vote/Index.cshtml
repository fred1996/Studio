@using Online.DbHelper.Model;
@model IEnumerable<UserVote>
@{
    ViewBag.Title = "投票";
    Layout = null;
}
@Styles.Render("~/Content/base.css")
@Styles.Render("~/Content/theme/green.css")
@Styles.Render("~/Scripts/jqueryui_11.4/jquery-ui.css")
@Scripts.Render("https://cdn.bootcss.com/jquery/1.10.2/jquery.min.js")
@Scripts.Render("~/Scripts/Web/VoteIndex.js")
@Scripts.Render("~/Scripts/global.js")
@Scripts.Render("~/Scripts/jqueryui_11.4/jquery-ui.js")
<script src="~/Scripts/jqueryui_11.4/jquery-ui.js"></script>
<ul id="votenav" class="mTop10">
    <li class="curren">投票项管理</li>
    <li>添加投票</li>
    <li>投票记录</li>
    <li></li>
    <li class="clear"></li>
</ul>
<div class="clear"></div>
<hr />
<div class="vote_box votelistbox show">
    <table class="votes votelists" style="width: 100%;" cellpadding="0" cellspacing="0">
        <thead>
            <tr>
                <td>标题</td>
                <td>创建人</td>
                <td>截止时间</td>
                <td>操作</td>
            </tr>
        </thead>
        <tbody>
            @foreach (UserVote item in Model)
            {
                <tr>
                    <td>@item.VoteTitle</td>
                    <td>@item.CreateUser</td>
                    <td>@item.VoteEndTime</td>
                    <td><a class='pAll5 voteEdid' vid="@item.VoteID" begintime="@item.VoteBeginTime"   detail="@item.VoteSummary" result="@item.IsViewResult.ToString()" mult="@item.IsVoteMulti.ToString()" anony="@item.IsAnonymous.ToString()" uendtime="@item.VoteEndTime" votecount="@item.OptCount"  title="@item.VoteTitle">编辑</a><a class='pAll5 voteDel' vid="@item.VoteID">删除</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="vote_box addvotebox">
    <div class="LineHeight45">
