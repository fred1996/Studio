@{
    Layout = null;
}
@model Online.Web.Models.ForgotPasswordViewModel
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>找回密码</title>
    @Styles.Render("~/Content/Logincss.css")
    @Scripts.Render(
    "https://cdn.bootcss.com/jquery/1.11.3/jquery.min.js",
    "https://cdn.bootcss.com/jquery-placeholder/2.1.3/jquery.placeholder.min.js")
    <script>
        $(function () {
            $('input, textarea').placeholder();
            if (navigator.userAgent.match(/AppleWebKit.*Mobile.*/)) {
                MobileCss();
            }
            function MobileCss() {
                $(".int_header").attr("style", "width:100%;");
                $(".alogin").attr("style", "width:90%;");
                $("#btnUserLogin").css("width", "100%");
                $("#btnUserLogin").parent("div").css({ "width": "100%", "margin-top": "10px" });
                $("#btnUserLogin").parent("div").next("div").css("width", "100%");
                $(".int_header .menu .m").css({ "display": "inline-block", "float": "left" });
                $(".asubmit").css("width", "99%");
                $(".clear100").css("height", "10px");
                $(".clear200").css("height", "0px");
                $(".int_header .menu .img1").css("height", "30px");
            }
        })
    </script>
</head>
<body>
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <!--头部开始-->
        <div class="int_header">
            <div class="login">
                <a href="/Account/Login">登录 </a>| <a href="/Account/Register">注册</a>
            </div>
            <div class="clear10"></div>
            <div class="menu">
                <img src="~/Image/images/icon_logo.png"  class="img1" />
                <ul class="m">
                    <li><a href="/Home/Index">网站首页</a></li>
                    <li><a href="http://www.mintaifu.com/html/about/" target="_blank">关于我们</a></li>
                    <li><a href="http://www.mintaifu.com/html/download/" target="_blank">下载中心</a></li>
                </ul>
            </div>
        </div>
        <!--头部结束-->
        <!--banner开始-->
        <div class="int_ban2"></div>
        <!--banner结束-->
        <div class=" clear100"></div>
        <div class="alogin" style="width: 640px;">
            <div class="alogo"><span>找回密码</span></div>
            <div class="tnewlist">
                <div class="tabcon" id="normalcon1">
                    <div class="sublist">
                        <div style="clear: both;">
                            @Html.Label(Model.Message, new { style = "color:red;font-size: 14px" })
                        </div>
                        <div style="clear: both;">
                            @*<input name="text" type="text" class="type1" id="UserEmail" placeholder="邮箱">*@
                            @Html.TextBoxFor(t => t.Email, null, new {@class = "type1", placeholder = "邮箱"})
                            @Html.ValidationMessageFor(t => t.Email, null, new {style = "color:red"})
                        </div>
                        <!--<div class="ts" id="UserEmailError" style="display: none"> <img src="images/e.png" width="15" height="15" alt=""/><span> 请输入邮箱</span></div>-->
                        <div style="clear: both;">
                            @Html.TextBoxFor(t => t.UserName, null, new {@class = "type1", placeholder = "用户名"})
                            @Html.ValidationMessageFor(t => t.UserName, null, new {style = "color:red"})
                        </div>

                        <!--<div class="ts" id="UserNameError" style="display:none"> <img src="images/e.png" width="15" height="15" alt=""/><span> 请输入用户名</span></div>-->
                        <div style="clear: both;">
                            <input type="submit" class="asubmit" id="next" value="下一步"/>
                        </div>
                        <!--<span class="aspan2"><a href="#">忘记邮箱和手机号？请联系客服</a></span>-->
                    </div>

                </div>
            </div>


            <script type="text/javascript">
                $(document).ready(function ($) {
                    //默认选项卡切换
                    $("#normaltab1").tabso({
                        cntSelect: "#normalcon1",
                        tabEvent: "mouseover",
                        tabStyle: "normal"
                    });
                });
            </script>

        </div>

        <div class=" clear200"></div>
        <!--版权开始-->
        <div class="int_cop">

            <div class="c2">
                @*<p>上海惠印投资管理咨询中心·版权所有</p>*@
            </div>
        </div>
    <!--版权结束-->
    }
</body>
</html>
