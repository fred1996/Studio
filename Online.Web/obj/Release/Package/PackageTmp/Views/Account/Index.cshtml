@{
    Layout = "~/Views/Shared/_UserCenterLayout.cshtml";
}
@model Online.DbHelper.Model.Users
<div class="admin_rightbar">
    <h3>账户首页</h3>
    <h4><a class="a4">个人资料</a><a class="a5" href="/Account/ChangePassword">修改密码</a></h4>

    <ul class="list3">
        <li>
            @*<span class="span1">用户Id:</span><span id="UserId" class="span2">@Model.UserID</span>*@
        </li>
        <li>
            <span class="span1">邮箱(账户名):</span><span id="UserEmail" class="span2">@Model.Email</span>

        </li>
        <li>
            <span class="span1">个人头像:</span>
            <span class="span2"><img src=@(!string.IsNullOrWhiteSpace(Model.Avatar) ? Model.Avatar : "../Image/images/admin_tx.png") id="img" width="140" height="140" alt="" /></span>
        </li>
        <li>
            <span class="span1">个人昵称:</span>
            <span id="UserNickname" class="span2">@Model.UserName</span>
        </li>
        <li>
            <span class="span1">真实姓名:</span>
            <span class="span2" id="RealName" size="30">@Model.RealName</span>
        </li>
        @*<li>
                <span class="span1">出生日期:</span>
                <span class="span2" id="BirthDay" size="30"></span>
            </li>*@
        <li>
            <span class="span1">联系电话:</span><span>
                <span id="Telephone" class="span2" size="30">@Model.Telephone</span>
                <br>
            </span>
        </li>
        <li>
            <span class="span1">QQ:</span><span>
                <span id="QQ" class="span2" size="30">@Model.QQ</span>
                <br>
            </span>
        </li>
        <li>
            <span class="span1">微信:</span><span>
                <span id="Weixin" class="span2" size="30">@Model.Weixin</span>
                <br>
            </span>
        </li>
        <li>
            <span class="span1">性别:</span>
            <span id="sex" class="span2" size="30">@(Model.Sex == 0 ? "男" : "女")</span>
        </li>
        <li>
            <span class="span1">积分:</span>
            <span id="score" class="span2" size="30">@Model.Score</span>
        </li>
        <li>
            <span class="span1">推荐码:</span>
            <span id="RecommendCode" class="span2" size="30">@Model.RecommendCode</span>
        </li>
        <li>
            <span class="span1">投资分析法:</span>
            <span id="InvestmentType" class="span2" size="30">@(Model.InvestmentType == 0 ? "无" : Model.InvestmentType == 1 ? "技术面" : "基础面")</span>
        </li>
        <li>
            <span class="span1">我的标签:</span><span>
                <span id="UserTags" class="span2" size="30">@Model.UserTags</span>
                <br>
            </span>
        </li>

    </ul>
    <div class="clear15"></div>

</div>
