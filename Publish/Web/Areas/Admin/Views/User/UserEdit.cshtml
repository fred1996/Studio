@model Online.DbHelper.Model.Users
@{
    ViewBag.Title = "用户信息编辑";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Edit.cshtml";
}
<div class="modal-content">
    @using (Html.BeginForm("UserEdit", "User", FormMethod.Post))
    {
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">用户信息编辑</h4>
        </div>
        <div class="modal-body">
            @Html.AntiForgeryToken()
            <div class="form-horizontal" style="margin-left:0px;">
                @Html.HiddenFor(model => model.UserID)
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">用户昵称：</label>
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <label class="col-sm-3 control-label">真实姓名：</label>
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.RealName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">用户密码：</label>
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    </div>
                    <label class="col-sm-3 control-label">身份证件：</label>
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.IDCard, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">用户QQ：</label>
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.QQ, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <label class="col-sm-3 control-label">用户微信：</label>
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.Weixin, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">性别：</label>
                    <div class="col-md-3 mTop5">
                        <label for="radio2">@Html.RadioButtonFor(model => model.Sex, 0, new { @id = "radio2", @name = "rdolstState" })男</label>
                        <label class="col-md-3" style="float:none;"></label>
                        <label for="radio1">@Html.RadioButtonFor(model => model.Sex, 1, new { @id = "radio1", @name = "rdolstState" })女</label>
                    </div>
                    <label class="col-sm-3 control-label">状态：</label>
                    <div class="col-md-3 mTop5">
                        <label for="radio2">@Html.RadioButtonFor(model => model.IsDeleted, false, new { @id = "radio3", @name = "isstart" }) 正常</label>
                        <label for="radio1">@Html.RadioButtonFor(model => model.IsDeleted, true, new { @id = "radio4", @name = "isstart" }) 删除</label>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <div class="col-md-12 mTop5 TxtCenter">
                        <button class="btn  btn-info " style="display:inline-block;" role="button">
                            <i class="glyphicon glyphicon-cloud"></i>&nbsp;保存
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
