@model Online.DbHelper.Model.UC_Dictionarys
@{
    ViewBag.Title = "编辑用户字典";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Edit.cshtml";
}


<div class="modal-content">
    @using (Html.BeginForm("EditUserKeySave", "User", FormMethod.Post))
    {
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">编辑用户字典信息</h4>
        </div>
        <div class="modal-body">
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.HiddenFor(model => model.DictID)
                <div class="form-group form-group-sm">
                    <label class="col-sm-4 control-label">Key值：</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.FiledBaseName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-4 control-label">Value值：</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.FiledBaseValue, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-4 control-label">描述：</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
            <button class="btn btn-primary" id="editSave">保存</button>
        </div>

    }
</div>

