@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/Content/base.css" rel="stylesheet" />
    <style>
        a {
            cursor: pointer;
        }

        body {
            color: #000000;
        }

        table thead td {
            line-height: 40px;
        }

        input[type=text] {
            border: 1px solid #DFDFDF;
            padding: 5px;
            width: 300px;
            -moz-border-radius: 3px;
            border-radius: 3px;
            margin-bottom: 5px;
            height: 25px;
            color: #000;
        }

        .btn {
            display: inline-block;
            width: 70px;
            height: 40px;
            line-height: 40px;
            padding: 0;
            text-align: center;
            vertical-align: middle;
            margin-left: 10px;
            background-color: #00b1ff;
            color: #fff;
            text-decoration: none;
            font-size: 15px;
            font-weight: bold;
            -moz-border-radius: 3px;
            -webkit-border-radius: 3px;
            border-radius: 3px;
            border: 0px;
            margin-left: 60px;
        }
    </style>
